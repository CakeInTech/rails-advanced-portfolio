{
  "name": "cake-portfolio",
  "private": "true",
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=assets",
    "build:css": "sass ./app/assets/stylesheets/application.bootstrap.scss ./app/assets/builds/application.css --no-source-map --load-path=node_modules && sass ./app/assets/stylesheets/blog.scss ./app/assets/builds/blog.css --no-source-map --load-path=node_modules && sass ./app/assets/stylesheets/portfolio.scss ./app/assets/builds/portfolio.css --no-source-map --load-path=node_modules"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^7.3.0",
    "@popperjs/core": "^2.11.7",
    "@rails/actiontext": "^7.0.4-3",
    "bootstrap": "^5.2.3",
    "bootstrap-icons": "^1.10.4",
    "esbuild": "^0.17.17",
    "jquery": "^3.6.4",
    "sass": "^1.61.0",
    "trix": "^2.0.4"
  }
}
