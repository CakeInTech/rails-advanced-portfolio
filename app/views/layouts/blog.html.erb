<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <meta charset="utf-8">
    <meta
      name="viewport"
      content="width=device-width,initial-scale=1, shrink-to-fit=no"
    >
    <meta name="keywords" content="<%= @seo_keywords %>"
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "blog", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render "partials/blog_nav" %>

    <div class="blog-header">
      <div class="container">
        <h1 class="blog-title">My Blog</h1>
        <%= link_to "Write a New Blog", new_blog_path if logged_in?(:site_admin) %>
      </div>
    </div>

    <div class="container">

      <!-- Start of nav --> <!-- End of nav -->
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <div class="row">
        <div class="col-md-8">
          <%= yield %>
        </div>
        <%= render 'partials/blog_sidebar' %>
      <%#= render "partials/navbar", location: 'bottom' %>
      <%= source_helper %>

    </div>
    <footer class="blog-footer">
      <%= copyright_generator %>
    </footer>
  </body>
</html>
