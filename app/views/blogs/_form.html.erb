<%= form_with(model: blog, class: "needs-validation", novalidate: true) do |form| %>
  <% if blog.errors.any? %>
     <% blog.errors.full_messages.each do |error|  %>
       <%= alert_generator error %>
     <% end %>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
    <div class="invalid-feedback">
      Please provide a title.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :topic_id, class: "form-label" %>
    <%= form.collection_select(
      :topic_id,
      Topic.all,
      :id,
      :title,
      { include_blank: true },
      { class: "form-select"}
    ) %>
    <div class="invalid-feedback">
      Please select a topic.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, class: "form-control", rows: 15%>
    <div class="invalid-feedback">
      Please provide a body.
    </div>
  </div>

  <div class="mb-3">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
